<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".no.hiof.stianad.cachemeifyoucan.activities.StartUpActivity"
    tools:showIn="@layout/activity_user_account"
    android:background="#64b5f6">

    <Button
        android:id="@+id/activity_userAccount_btn_signUp"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:background="#2286c3"
        android:text="@string/sign_up_btn"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activty_userAccount_btn_login"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#9be7ff"
        android:contentDescription="@string/login_button"
        android:text="@string/login"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/activity_userAccount_btn_signUp"
        app:layout_constraintTop_toBottomOf="@+id/activity_userAccount_btn_signUp"
        app:layout_constraintVertical_bias="0.050000012" />

    <ImageView
        android:id="@+id/activity_userAccount_iv_logo"
        android:layout_width="271dp"
        android:layout_height="189dp"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/app_logo"
        app:layout_constraintBottom_toBottomOf="@+id/activty_userAccount_btn_login"
        app:layout_constraintStart_toEndOf="@+id/activty_userAccount_btn_login"
        app:layout_constraintTop_toTopOf="@+id/activity_userAccount_btn_signUp"
        app:srcCompat="@drawable/adobe_post_20181111_172918" />


</android.support.constraint.ConstraintLayout>